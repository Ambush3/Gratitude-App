<%- include('partials/introHeader') -%>

<main class="login-container">
  <div class="row justify-content-center">
    <section class="col-lg-3 col-md-8 col-sm-10 mt-3">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <form action="/login" method="POST">
        <div class="mb-2">
          <label for="exampleInputEmail1" class="form-label"
            >Email address</label
          >
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>
        <div class="">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <section class="submitAndForgotPasswordContainer">
          <div class="submitAndForgotPassword">
            <button type="submit" class="loginSubmitBtn btn btn-primary">Submit</button>
            <a href="/forgot-password" class="forgotPasswordLink">Forgot password</a>
          </div>
        </section>
      </form>
    </section>
  </div>
</main>

<%- include('partials/footer') -%>
