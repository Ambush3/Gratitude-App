<!-- Path: views/forgot-password.ejs -->

<%- include('partials/header') -%>
<main class="container-fluid">
    <div class="row justify-content-center">
        <section class="col-lg-6 col-md-10">
<form role="form" method="POST" action="/forgot-password">
    <div class="box box-primary">
        <!-- /.box-header -->
        <div class="box-body">
            <div class="mb-3 row justify-content-center">
                <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8">
                    <label for="email" class="form-label">
                        Email address
                    </label>
                    <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        placeholder="Enter email"
                    />
                </div>
            </div>
                <!-- /.input group -->
            <div class="mb-3 row justify-content-center">
                <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8">
                    <label>Old Password</label>
                </div>
                <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8">
                    <div class="input-group">
                        <label for="oldPassword"></label><input class="form-control" id="oldPassword" name="oldPassword" value=""
                                                                placeholder="Enter the Old Password" type="password">
                    </div>
                </div>
                <!-- /.input group -->
            </div>
            <div class="mb-3 row justify-content-center">
                <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8">
                    <label>New Password</label>
                </div>
                <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8">
                    <div class="input-group">
                        <label for="newPassword"></label><input class="form-control" id="newPassword" name="newPassword" value=""
                                                                placeholder="Enter the New Password" type="password">
                    </div>
                </div>
                <!-- /.input group -->
            </div>
            <div class="mb-3 row justify-content-center">
                <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8">
                    <label>Confirm Password</label>
                </div>
                <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8">
                    <div class="input-group">
                        <label for="confirmPassword"></label><input class="form-control" id="confirmPassword" name="confirmPassword" value=""
                                                                    placeholder="Re-enter the New Password" type="password">
                    </div>
                </div>
                <!-- /.input group -->
            </div>
            <div class="box-header">
                <div class="mb-3 row justify-content-center">
                <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8">
                <h2 class="page-header"><i class="fa fa-lock"></i> Change Password</h2>
                <div class="pull-right">
                    <button type="submit" name="Submit" value="Save" class="btn btn-danger"><i class="livicon" data-n="pen"
                                                                                               data-s="16" data-c="#fff" data-hc="0"></i> Save</button>
                    <button type="reset" name="Reset" value="Clear" class="btn btn-primary"><i class="livicon" data-n="trash" data-s="16" data-c="#fff" data-hc="0"></i> Clear</button>
                </div>
                </div>
                </div>
            </div>
        </div>
    </div>
    </form>
    </section>
    </div>
</main>

<%- include('partials/footer') -%>