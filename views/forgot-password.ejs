<!-- Path: views/forgot-password.ejs -->

<%- include('partials/introHeader') -%>
<main class="forgot-password-form container-fluid">
    <div class="row justify-content-center">
        <section class="col-lg-3 col-md-8 col-md-10 mt-3">
            <form role="form" method="POST" action="/forgot-password">
                <div class="box box-primary">
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="mb-3 row justify-content-center">
                            <h2 class="page-header">Forgot Password</h2>
                            <div class="col-xs-12 col-sm-3 col-md-8 col-lg-12">
                                <label for="email" class="form-label">
                                    Email address
                                </label>
                                <input
                                    type="email"
                                    class="form-control"
                                    id="email"
                                    name="email"
                                />
                            </div>
                        </div>
                        <div class="box-header">
                            <div class="mb-3 row justify-content-center">
                                <div class="col-xs-12 col-sm-3 col-md-8 col-lg-12">
                                        <div class="pull-right">
                                            <button type="submit" name="Submit" value="Save" class="btn btn-primary"><i class="livicon" data-n="pen"
                                                                                                                        data-s="16" data-c="#fff" data-hc="0"></i> Send</button>
                                            <button type="reset" name="Reset" value="Clear" class="btn btn-secondary"><i class="livicon" data-n="trash" data-s="16" data-c="#fff" data-hc="0"></i> Clear</button>
                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</main>

<%- include('partials/footer') -%>