<%- include('partials/header') -%>
<div class="container">
    <div class="edit-profile row justify-content-center">
        <div class="mb-3 col-lg-4 col-md-6 col-sm-4">
            <label for="file" class="form-label">Profile Picture Upload</label>
            <form action="/post/createProfilePic" enctype="multipart/form-data" method="POST">
                <input type="file" class="form-control" id="imageUpload" name="file">
                <button type="submit" class="btn btn-primary mt-2">Upload</button>
            </form>
            <label for="password" class="mt-3 form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password">
            <button type="submit" class="btn btn-primary mt-2">Change Password</button>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>