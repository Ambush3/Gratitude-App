<%- include('partials/header') -%>
<div class="container">
    <div class="edit-profile row justify-content-center">
        <div class="mb-3 col-lg-4 col-md-6 col-sm-4">
            <label for="file" class="form-label">Profile Picture Upload</label>
            <form action="/post/createProfilePic" enctype="multipart/form-data" method="POST">
                <input type="file" class="form-control" id="imageUpload" name="file">
                <button type="submit" class="btn btn-primary mt-2">Upload</button>
            </form>
            <label for="email" class="mt-4 form-label">Change Password</label>
            <form role="form" method="POST" action="/edit-profile">
                <div class="box box-primary">
                    <div class="box-body">
                    
                        <div class="mb-3 justify-content-center">
                            <div class="">
                                <label>Old Password</label>
                            </div>
                            <div class="">
                                <div class="input-group">
                                    <label for="oldPassword"></label><input class="form-control" id="oldPassword" name="oldPassword"
                                        value="" placeholder="Enter the Old Password" type="password">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3 row justify-content-center">
                            <div class="">
                                <label>New Password</label>
                            </div>
                            <div class="">
                                <div class="input-group">
                                    <label for="newPassword"></label><input class="form-control" id="newPassword" name="newPassword"
                                        value="" placeholder="Enter the New Password" type="password">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3 row justify-content-center">
                            <div class="">
                                <label>Confirm Password</label>
                            </div>
                            <div class="">
                                <div class="input-group">
                                    <label for="confirmPassword"></label><input class="form-control" id="confirmPassword"
                                        name="confirmPassword" value="" placeholder="Re-enter the New Password" type="password">
                                </div>
                            </div>
                        </div>
                        <div class="box-header">
                            <div class="mb-3 row justify-content-center">
                                <div class="">
                                    <div class="pull-right">
                                        <button type="submit" name="Submit" value="Save" class="btn btn-danger"><i class="livicon"
                                                data-n="pen" data-s="16" data-c="#fff" data-hc="0"></i> Save</button>
                                        <button type="reset" name="Reset" value="Clear" class="btn btn-primary"><i class="livicon"
                                                data-n="trash" data-s="16" data-c="#fff" data-hc="0"></i> Clear</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            
        </div>
    </div>
</div>

<%- include('partials/footer') -%>