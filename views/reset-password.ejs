<%- include('partials/introHeader') -%>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
</head>

<body>
    <h1>Reset Password</h1>
    <form action = "/reset-password" method = "POST">
        <div class="mb-3 row justify-content-center">
            <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8">
                <label for="email" class="form-label">
                    Email address
                </label>
                <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                />
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8">
                <label for="password" class="form-label">
                    Password
                </label>
                <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                />
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8">
                <label for="confirmPassword" class="form-label">
                    Confirm Password
                </label>
                <input
                    type="password"
                    class="form-control"
                    id="confirmPassword"
                    name="confirmPassword"
                />
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <div class="col-xs-12 col-sm-3 col-md-8 col-lg-8">
                <button type="submit" name="Submit" value="Save" class="btn btn-primary"><i class="livicon" data-n="pen"
                                                                                             data-s="16" data-c="#fff" data-hc="0"></i> Send</button>
                <button type="reset" name="Reset" value="Clear" class="btn btn-secondary"><i class="livicon" data-n="trash" data-s="16" data-c="#fff" data-hc="0"></i> Clear</button>
            </div>
        </div>
</body>

</html>

<%- include('partials/footer') -%>